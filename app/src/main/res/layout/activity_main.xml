<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">

    <Button
            android:id="@+id/amarillo"
            style="@android:style/Widget.DeviceDefault.Light.Button.Toggle"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/holo_orange_light"
            android:text="@string/amarillo"
            app:layout_constraintBottom_toTopOf="@+id/rojo"
            app:layout_constraintEnd_toStartOf="@+id/azul"
            app:layout_constraintHorizontal_bias="0.724"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.893"/>
    <Button
            android:id="@+id/azul"
            style="@android:style/Widget.DeviceDefault.Light.Button.Toggle"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="40dp"
            android:background="@android:color/holo_blue_light"
            android:text="@string/azul"
            app:layout_constraintBottom_toTopOf="@+id/verde"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.893"/>

    <Button
            android:id="@+id/rojo"
            style="@android:style/Widget.DeviceDefault.Light.Button.Toggle"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_marginBottom="92dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/holo_red_light"
            android:text="@string/rojo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/verde"
            app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintHorizontal_bias="0.777"/>

    <Button
            android:id="@+id/verde"
            style="@android:style/Widget.DeviceDefault.Light.Button.Toggle"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_marginBottom="92dp"
            android:background="@android:color/holo_green_light"
            android:text="@string/verde"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"/>

    <Button
            android:id="@+id/jugar"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="32dp"
            android:text="@string/jugar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:layout_marginEnd="36dp"
            android:text="@string/salir"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_begin="2dp"
                                          android:orientation="vertical"/>

</android.support.constraint.ConstraintLayout>